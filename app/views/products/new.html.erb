<h1>Enter a new product to sell:</h1>

<%= form_tag '/products', method: :post do %>
	<div>
		<%= label_tag :name %>
		<%= text_field_tag :name  %>
	</div>

	<div>
		<%= label_tag :image %>
		<%= text_field_tag :image  %>
	</div>

	<div>
		<%= label_tag :price %>
		<%= text_field_tag :price  %>
	</div>

	<div>
		<%= label_tag :description %>
		<%= text_area_tag :description  %>
	</div>

	<div>
		<%= label_tag :size %>
		<%= text_field_tag :size  %>
	</div>

	<div>
		<%= submit_tag "Add Product" %>
	</div>

<% end %>