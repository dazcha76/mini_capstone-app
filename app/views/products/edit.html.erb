<h1>Edit product information:</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
	<div>
		<%= label_tag :name %>
		<%= text_field_tag :name, @product.name %>
	</div>

	<div>
		<%= label_tag :image %>
		<%= text_field_tag :image, @product.image  %>
	</div>

	<div>
		<%= label_tag :price %>
		<%= text_field_tag :price, @product.price  %>
	</div>

	<div>
		<%= label_tag :description %>
		<%= text_area_tag :description, @product.description %>
	</div>

	<div>
		<%= label_tag :size %>
		<%= text_field_tag :size, @product.size  %>
	</div>

	<div>
		<%= submit_tag "Edit Product" %>
	</div>

<% end %>