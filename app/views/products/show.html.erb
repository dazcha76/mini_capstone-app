<h2><%= @product.name %></h2>
<p><%= @product.image %></p>
<p><%= @product.price %></p>
<p><%= @product.description %></p>
<p><%= @product.size %></p>
<button type="button" class="btn btn-danger">Buy it!</button>

<br><br>

<div>
	<a href="/products/<%= @product.id %>/edit"><button type="button" class="btn btn-primary">Edit</button></a>

	<%= link_to "Delete", "/products/#{@product.id}", method: :delete, class: "btn btn-primary" %>
</div>